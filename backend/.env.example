# ===========================================
# GHL BACKEND - SALA 2 - CONFIGURACIÓN
# ===========================================
# Copia este archivo como .env y actualiza los valores

# ===========================================
# CONFIGURACIÓN DE DJANGO
# ===========================================
SECRET_KEY=super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# ===========================================
# CONFIGURACIÓN DE GHL API
# ===========================================
# Token de acceso directo a GHL (obtener de tu cuenta GHL)
GHL_ACCESS_TOKEN=tu_access_token_aqui

# ID de la ubicación en GHL (obtener de tu cuenta GHL)
GHL_LOCATION_ID=

# ID del calendario en GHL (obtener de tu cuenta GHL)
GHL_CALENDAR_ID=

# ID del contacto en GHL (obtener de tu cuenta GHL)
GHL_CONTACT_ID=

# ID del usuario asignado en GHL (obtener de tu cuenta GHL)
GHL_ASSIGNED_USER_ID=
# Versión de la API de GHL
GHL_API_VERSION=